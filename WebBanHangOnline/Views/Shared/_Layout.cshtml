    <div id="chat-widget">
        <div id="chat-header">Chat hỗ trợ 💬</div>
        <div id="chat-body">
            <div id="chat-messages"></div>
            <div id="chat-input-group">
                <input type="text" id="chat-input" placeholder="Nhập câu hỏi..." />
                <button id="chat-send">Gửi</button>
            </div>
        </div>
    </div>
    <script>
        document.getElementById("chat-send").addEventListener("click", async () => {
            const input = document.getElementById("chat-input");
            const msg = input.value.trim();
            if (!msg) return;

            addMessage("user", msg);
            input.value = "";

            try {
                const res = await fetch("/ChatBot/GetReply", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ message: msg })
                });
                const { reply } = await res.json();
                addMessage("bot", reply);
            } catch {
                addMessage("bot", "❌ Lỗi kết nối, vui lòng thử lại.");
            }
        });

        function addMessage(who, text) {
            const div = document.createElement("div");
            div.className = who;
            div.textContent = text;
            const log = document.getElementById("chat-messages");
            log.appendChild(div);
            log.scrollTop = log.scrollHeight;
        }
    </script>
