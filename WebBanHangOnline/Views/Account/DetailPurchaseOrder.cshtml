@model WebBanHangOnline.Models.EF.Order
@{
    ViewBag.Title = "DetailPurchaseOrder";
}
@if (Model != null)
{
    <link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
    <div class="container product_section_container">
        <div class="row">
            <div class="col product_section clearfix">

                <!-- Breadcrumbs -->

                <div class="breadcrumbs d-flex flex-row align-items-center">
                    <ul>
                        <li><a href="#">Account</a></li>
                        <li class="active"><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Profile</a></li>
                        <li class="active"><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Đơn hàng</a></li>
                        <li class="active"><a href="/"><i class="fa fa-angle-right" aria-hidden="true"></i>Chi tiết đơn hàng</a></li>
                    </ul>
                </div>

                <!-- Sidebar -->

                <div class="sidebar">
                    <div class="sidebar_section">
                        <div class="sidebar_title">
                            <h5>Tài khoản</h5>
                        </div>
                        <ul class="sidebar_categories">
                            <li><a href="/account/profile"><span><i aria-hidden="true"></i></span>Hồ sơ</a></li>
                            <li class="active"><a href="/don-hang"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>Đơn hàng</a></li>
                        </ul>
                    </div>

                </div>

                <!-- Main Content -->

                <div class="main_content">
                    <div class="products_iso">
                        <div class="row">
                            <div class="col-md-9">
                                <div class="card-header">
                                    <h4 class="card-title">Chi tiết đơn hàng</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Mã đơn hàng</label>
                                                <p class="form-control">@Model.Code</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Họ tên</label>
                                                <p class="form-control">@Model.CustomerName</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Tổng tiền</label>
                                                <p class="form-control">@WebBanHangOnline.Common.Common.FormatNumber(Model.TotalAmount, 0) đ</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Số điện thoại</label>
                                                <p class="form-control">@Model.Phone</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Ngày đặt</label>
                                                <p class="form-control">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Email</label>
                                                <p class="form-control">@Model.Email</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Thanh toán</label>
                                                @if (Model.TypePayment == 1)
                                                {
                                                    <p class="form-control">COD</p>
                                                }
                                                else if (Model.TypePayment == 2)
                                                {
                                                    <p class="form-control">Chuyển khoản</p>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Phí vận chuyển</label>
                                                <p class="form-control">@WebBanHangOnline.Common.Common.FormatNumber(Model.MoneyShip, 0) đ</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <h4>Danh sách sản phẩm</h4>
                                    </div>
                                    <div class="col-12">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Tên sản phẩm</th>
                                                    <th>Size</th>
                                                    <th>Giá</th>
                                                    <th>Số lượng</th>
                                                    <th>Thành tiền</th>
                                                </tr>

                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model.OrderDetails)
                                                {
                                                    int i = 1;
                                                    <tr>
                                                        <td>@i</td>
                                                        <td>@item.ProductDetail.Product.Title</td>
                                                        <td>@item.Size</td>
                                                        <td>@WebBanHangOnline.Common.Common.FormatNumber(item.Price)</td>
                                                        <td>@item.Quantity</td>
                                                        <td>@WebBanHangOnline.Common.Common.FormatNumber((item.Price * item.Quantity), 0)</td>
                                                    </tr>
                                                    i++;
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


