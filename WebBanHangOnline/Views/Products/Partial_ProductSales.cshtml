@model IEnumerable<WebBanHangOnline.Models.EF.Promotion_Product>
@using WebBanHangOnline.Common
@if (Model != null && Model.Any())
{

    <div class="best_sellers">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <div class="section_title new_arrivals_title">
                        <h2>Siêu Sale 6-6</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="product_slider_container">
                        <div class="owl-carousel owl-theme product_slider">

                            @foreach (var item in Model)
                            {
                                var strImge = "";
                                var img = item.Product.ProductImage.FirstOrDefault(x => x.IsDefault);
                                if (img != null)
                                {
                                    strImge = img.Image;
                                }

                                <div class="owl-item product_slider_item">
                                    <div class="product-item @item.Product.ProductCategory.Alias">
                                        <div class="product discount product_filter">
                                            <div class="product_image">
                                                <img src="@strImge" alt="@item.Product.Title">
                                            </div>
                                            <div class="favorite favorite_left"></div>
                                            @if (item.Type > 0)
                                            {
                                                <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>-@item.Type%</span></div>
                                            }
                                            <div class="product_info">
                                                <h6 class="product_name"><a href="/chi-tiet/@item.Product.Alias-p@(item.Product.Id)">@item.Product.Title</a></h6>
                                                @if (item.Type > 0)
                                                {
                                                    <div class="product_price">@WebBanHangOnline.Common.Common.FormatNumber(item.Product.Price - (item.Type * item.Product.Price)/100, 0)<span>@WebBanHangOnline.Common.Common.FormatNumber(item.Product.Price, 0)</span></div>

                                                }
                                            </div>
                                        </div>
                                        @*<div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">add to cart</a></div>*@
                                    </div>
                                </div>

                            }

                        </div>


                        <div class="product_slider_nav_left product_slider_nav d-flex align-items-center justify-content-center flex-column">
                            <i class="fa fa-chevron-left" aria-hidden="true"></i>
                        </div>
                        <div class="product_slider_nav_right product_slider_nav d-flex align-items-center justify-content-center flex-column">
                            <i class="fa fa-chevron-right" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
